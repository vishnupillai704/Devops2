pipeline {
    agent any

   tools {
     terraform 'terraform'
    }

    stages {
        stage('git checkout') {
        steps {
            sh "git clone https://github.com/vishnupillai704/Devops22"
            sh "cd terraform"
         }
    }
        stage('terraform init') {
        steps {
            sh 'terraform init'
         }
    }
        stage('terraform apply') {
        steps {
            sh 'terraform apply --auto-approve'
         }
    }    
    
    } 
}
